<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="9dp">

    <TextView
        android:id="@+id/judulsoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/garamondbold"
        android:text="Input Soal"
        android:textColor="#FF9800"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan judul soal"
        android:inputType=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvpilihkelas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:fontFamily="@font/garamondbold"
            android:layout_marginTop="20dp"
            android:text="@string/kelas"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnersoal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/spinner"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            tools:listitem="@android:layout/simple_spinner_item" />

    </LinearLayout>

    <Button
        android:id="@+id/btnsoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/simpan"
        android:background="@color/colorLightOrange"
        android:layout_gravity="bottom" />

</LinearLayout>