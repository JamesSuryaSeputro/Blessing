<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garamondbold"
                android:text="@string/selamat_datang"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvnamauser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garamondbold"
                android:textSize="18sp"
                tools:text="User" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvmateri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/garamondbold"
            android:text="@string/materi"
            android:textColor="#FF9800"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/materi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_materi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_made_by_freepik_from_www_flaticon_com"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/materi" />

                <TextView
                    android:id="@+id/tvmainmateri"
                    android:layout_width="272dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="13dp"
                    android:layout_toStartOf="@+id/img_materi"
                    android:fontFamily="sans-serif"
                    android:text="Lihat kumpulan materi pelajaran dari berbagai mata pelajaran"
                    android:textSize="16sp" />

            </RelativeLayout>

            <!--                <androidx.recyclerview.widget.RecyclerView-->
            <!--                    android:id="@+id/item_learning"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:scaleType="fitCenter"-->
            <!--                    android:adjustViewBounds="true"/>-->

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/garamondbold"
            android:text="@string/bank_soal"
            android:textColor="#FF9800"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/banksoal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_banksoal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/icon_made_by_freepik_from_www_flaticon_com"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banksoal" />

                <TextView
                    android:id="@+id/tvmainbanksoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_banksoal"
                    android:fontFamily="sans-serif"
                    android:text="Pecahkan dan temukan jawaban dari kumpulan latihan soal kuis"
                    android:textSize="16sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/garamondbold"
            android:text="@string/tryout"
            android:textColor="#FF9800"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tryout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_tryout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_made_by_freepik_from_www_flaticon_com"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/tryout" />

            <TextView
                android:id="@+id/tvtryout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/img_tryout"
                android:fontFamily="sans-serif"
                android:text="Kerjakan tryout untuk mempersiapkan diri menghadapi ujian"
                android:textSize="16sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/garamondbold"
            android:text="@string/hasil"
            android:textColor="#FF9800"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pembahasan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_pembahasan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/icon_made_by_freepik_from_www_flaticon_com"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/pembahasan" />

            <TextView
                android:id="@+id/tvpembahasan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_pembahasan"
                android:fontFamily="sans-serif"
                android:text="Lihat hasil pembahasan dan nilai"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvlihatpembahasan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:drawablePadding="4dp"
                android:focusable="true"
                android:text="Lihat selengkapnya"
                android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>