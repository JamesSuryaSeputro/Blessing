<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/list_namasoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-black"
            android:textSize="16sp"
            tools:text="nama soal" />

        <TextView
            android:id="@+id/tv_nilaisoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_namasoal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:text="@string/nilai"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_nilaisoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_namasoal"
            android:layout_toEndOf="@id/tv_nilaisoal"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            tools:text="10"/>

        <TextView
            android:id="@+id/tv_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_namasoal"
            android:layout_toEndOf="@id/list_nilaisoal"
            android:fontFamily="sans-serif"
            android:text="@string/slash"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_jumlahsoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_namasoal"
            android:layout_toEndOf="@id/tv_slash"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            tools:text="10"/>

        <TextView
            android:id="@+id/list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_nilaisoal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            tools:text="dd-mm-yy" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>